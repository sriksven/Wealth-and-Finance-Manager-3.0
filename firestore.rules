rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is signed in
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check ownership
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Default: Deny everything
    match /{document=**} {
      allow read, write: if false;
    }

    // Accounts
    match /accounts/{docId} {
      allow create: if isSignedIn() && request.resource.data.uid == request.auth.uid;
      allow read, update, delete: if isSignedIn() && resource.data.uid == request.auth.uid;
    }

    // Balances
    match /balances/{docId} {
      allow create: if isSignedIn() && request.resource.data.uid == request.auth.uid;
      allow read, update, delete: if isSignedIn() && resource.data.uid == request.auth.uid;
    }

    // Transactions
    match /transactions/{docId} {
      allow create: if isSignedIn() && request.resource.data.uid == request.auth.uid;
      allow read, update, delete: if isSignedIn() && resource.data.uid == request.auth.uid;
    }

    // Cards
    match /cards/{docId} {
      allow create: if isSignedIn() && request.resource.data.uid == request.auth.uid;
      allow read, update, delete: if isSignedIn() && resource.data.uid == request.auth.uid;
    }

    // Recurring Items
    match /recurring_items/{docId} {
      allow create: if isSignedIn() && request.resource.data.uid == request.auth.uid;
      allow read, update, delete: if isSignedIn() && resource.data.uid == request.auth.uid;
    }

    // Budgets (for expenditure levels and alerts)
    // Budgets (Monthly Category Budgets)
    match /budgets/{docId} {
      allow create: if isSignedIn() && request.resource.data.uid == request.auth.uid;
      allow read, update, delete: if isSignedIn() && resource.data.uid == request.auth.uid;
    }

    // Budget Configs (Overall Expenditure Levels)
    match /budgetConfigs/{userId} {
      allow read, write: if isSignedIn();
    }

    // Alerts
    match /alerts/{docId} {
      allow create: if isSignedIn() && request.resource.data.uid == request.auth.uid;
      allow read, update, delete: if isSignedIn() && resource.data.uid == request.auth.uid;
    }

    // Users (for profile and settings)
    match /users/{userId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }
  }
}
